{{#if details.classification}}
  <span {{on "click" (optional this.scrollToIntegration)}} class="integration-summary-tag integration-background-color integration-border-color">
    <span class="acronym integration-text-bold-color">{{block.acronym}}</span>
    <span class="integration-text-color">Classification: {{details.classification}}</span>
  </span>
{{/if}}
{{#if details.category}}
  <span {{on "click" (optional this.scrollToIntegration)}} class="integration-summary-tag integration-background-color integration-border-color">
    <span class="acronym integration-text-bold-color">{{block.acronym}}</span>
    <span class="integration-text-color">Riot Category: {{details.category}}</span>
  </span>
{{/if}}
{{#if torExitNode}}
  <span {{on "click" (optional this.scrollToIntegration)}} class="integration-summary-tag integration-background-color integration-border-color">
    <span class="acronym integration-text-bold-color">{{block.acronym}}</span>
    <span class="integration-text-color">Tor Exit Node</span>
  </span>
{{/if}}
{{#each additionalTags as |tag index|}}
  <span {{on "click" (optional this.scrollToIntegration)}} class="integration-summary-tag integration-background-color integration-border-color">
    <span class="acronym integration-text-bold-color">{{block.acronym}}</span>
    <span class="integration-text-color">
      {{tag}}
      {{#if (and moreThan1Tags (eq (sub additionalTags.length 1) index))}}
        +...
      {{/if}}
    </span>
  </span>
{{/each}}
